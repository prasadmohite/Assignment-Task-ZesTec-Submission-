@model Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h2>Employee Details</h2>

<div class="form-group">
    <label>Name:</label>
    <p>@Model.Name</p>
</div>
<div class="form-group">
    <label>Gender:</label>
    <p>@Model.Gender</p>
</div>
<div class="form-group">
    <label>Position:</label>
    <p>@Model.Position</p>
</div>

<a asp-action="Index" class="btn btn-secondary">Back</a>
